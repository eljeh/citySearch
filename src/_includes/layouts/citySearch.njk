<script>
  $('.filterToggle').click(function() {
    $('.filter').toggleClass('open');
  });

  $('.mapToggle').click(function() {
    $('.results-panel').toggleClass('open');
  });

  $('.card').click(function() {

    if($(this).hasClass('open')){
    $('.card').removeClass('open');
    $('.results-panel').removeClass('has-open');
    } else {
      $('.card').removeClass('open');
      $(this).addClass('open');
      $('.results-panel').addClass('has-open');
        scrollTo(this,200);
    }

  });

  function scrollTo(el,speed,offSet) {
      $([document.documentElement, document.body]).animate({
          scrollTop: $(el).offset().top -10
      }, speed);
  }
</script>


